<!-- app/views/layouts/_navbar.html.erb -->
<nav class="navbar navbar-expand-lg navbar-header navbar-dark navbar-custom">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to home_path, method: :post do %>
        <div class="white-fill">
          <%= render inline: Rails.root.join('app/assets/images/logo.svg').read %>
        </div>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Stations', stations_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Bikes', bikes_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Rentals', rentals_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Payments', payments_path, class: 'nav-link' %>
        </li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <!-- <li><%= link_to "Settings", '#' %></li> -->
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', login_path, class: 'nav-link' %>
          </li>
        <% end %>

        <!-- Add more page links as needed -->
      </ul>
    </div>
  </div>
</nav>
<div class="h4 text-center">
  <% flash.each do |type, msg| %>
    <div>
      <br>
      <%= msg %>
    </div>
  <% end %>
</div>
