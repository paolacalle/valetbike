<div class="h1 text-center">
  <h1>ValetBike!</h1>
  <p>Rentals</p>
</div>

<div>
  <p>
    <%= link_to "Create New Rental", new_rental_path, class: 'btn button btn-primary' %>
  </p>
</div>

<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="flexbox vertical stretch">
      <br>
      <% if @rentals.present? %>
        <%= render(partial: "rentals/row", collection: @rentals, as: :rental) %>
      <% else %>
      <div class="empty">
        No rentals found.
      </div>
      <% end %>
    </div>
	</div>
</div>


